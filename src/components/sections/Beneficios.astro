---
import { Image } from "astro:assets";
import Card from "../ui/Card.astro";
import Section from "./Section.astro";

const cards = [
  {
    index: 0,
    title:
      "Eficiencia operativa: Menos tiempo de inactividad.",
    link: "https://google.com",
  },
  {
    index: 1,
    title:
      "Reducción de costos: Evita averías graves.",
    link: "https://google.com",
  },
  {
    index: 1,
    title:
      "Soporte técnico especializado: Atención rápida y profesional.",
    link: "https://google.com",
  },
];

import larrow from "../../assets/icon2.svg";
import SectionTitle from "../ui/SectionTitle.astro";
---

<Section id="beneficios">
  <SectionTitle
    sectionTitle="Beneficios para tu empresa"
    description="Tu empresa tendrá los siguientes beneficios si nos eliges:"
  />
  <div class="flex flex-col py-4 gap-6 lg:flex-row justify-between rounded-[45px] p-1">
    {
      cards.map((card) => (
        <Card isUnderline>
          <div class="flex px-4 py-2 h-full rounded-[45px] m-[5px]">
            <div class="flex flex-col gap-5">
              <p class="font-medium">{card.title}</p>
              <a href={card.link} class="flex items-center gap-[15px]">
                <span class="text-action">Case Info</span>
                <picture>
                  <Image src={larrow} alt="Arrow pointing up right" />
                </picture>
              </a>
            </div>
          </div>
        </Card>
      ))
    }
  </div>
</Section>

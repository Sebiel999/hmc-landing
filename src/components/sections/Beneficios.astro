---
import { Image } from "astro:assets";
import Card from "../ui/Card.astro";
import Section from "./Section.astro";
import ImgCard1 from "../../assets/pics/efficiency.svg";
import ImgCard2 from "../../assets/pics/money.svg";
import ImgCard3 from "../../assets/pics/clientservice.svg";

const cards = [
  {
    index: 0,
    title:
      "Eficiencia operativa: Menos tiempo de inactividad.",
    link: "https://google.com",
    pic: ImgCard1
  },
  {
    index: 1,
    title:
      "Reducción de costos: Evita averías graves.",
    link: "https://google.com",
    pic: ImgCard2
  },
  {
    index: 2,
    title:
      "Soporte técnico especializado: Atención rápida y profesional.",
    link: "https://google.com",
    pic: ImgCard3
  },
];

import larrow from "../../assets/icon8Mod.svg";
import SectionTitle from "../ui/SectionTitle.astro";
---

<Section id="beneficios">
  <SectionTitle
    sectionTitle="Beneficios para tu empresa"
    description="Tu empresa tendrá los siguientes beneficios si nos eliges:"
  />
  <div class="flex flex-col py-6 gap-6 lg:flex-row justify-between rounded-[45px] p-1">
    {
      cards.map((card) => (
        <Card isUnderline>
          <div class="flex justify-center px-4 py-2 h-full rounded-[45px] m-[5px]">
            <div class="flex flex-col gap-5">
              <p class="font-medium">{card.title}</p>
              <a href={card.link} class="flex items-center gap-[15px]">
                <span class="text-action">Case Info</span>
                <picture>
                  <Image src={larrow} alt="Arrow pointing up right" />
                </picture>
              </a>
              <picture class="relative row-span-1 md:row-span-3 inline-flex justify-center items-center">
                <Image class={"w-[200px] rounded-lg"} src={card.pic} alt="Efficiency" loading="eager" />
              </picture>
            </div>
          </div>
        </Card>
      ))
    }
  </div>
</Section>

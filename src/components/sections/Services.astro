---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";

import c1 from "../../assets/pics/card-pic1.png";
import c2 from "../../assets/pics/card-pic2.png";
import c3 from "../../assets/pics/card-pic3.png";

const cards = [
  {
    index: 1,
    titleTop: "Básico",
    titleBottom: "Inspección y limpieza anual",
    img: c1,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 2,
    titleTop: "Intermedio",
    titleBottom: "Inspecciones semestrales y soporte técnico",
    img: c2,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 3,
    titleTop: "Premium",
    titleBottom: "Mantenimiento integral con piezas de repuesto incluidas",
    img: c3,
    alt: "SEO",
    link: "https://google.com",
  },
];

const description =
  "Ofrecemos servicios de mantenimiento preventivo y correctivo: Limpieza, ajustes y reparación de equipos.";
---

<Section id="services">
  <div class="mt-[140px] mb-5">
    <SectionTitle sectionTitle="Servicios" description={description} />
    <div class="grid lg:grid-cols-3 lg:grid-rows-1 gap-10">
      {
        cards.map((card) => (
          <ServiceCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            img={card.img}
            alt={card.alt}
            link={card.link}
          />
        ))
      }
    </div>
  </div>
</Section>
